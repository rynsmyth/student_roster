<p id="notice"><%= notice %></p>
<div class="jumbotron">
<h1>Listing Students</h1>
</div>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Cell phone</th>
      <th>Home phone</th>
      <th>Work phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-responsive">
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><a href="mailto:#"><%= student.email %></a></td>
        <td><%= student.cell_phone %></td>
        <td><%= student.home_phone %></td>
        <td><%= student.work_phone %></td>
        <td><%= link_to 'Show', student, class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', student, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Student', new_student_path, class: 'btn btn-success' %>
